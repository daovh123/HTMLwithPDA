         <VBox id="BackVbox" fx:id="BackVbox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="458.0" prefWidth="368.0" spacing="20" visible="false">
